<h1>Editar teste</h1>
<form action="/teste/<%= teste.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= user.nome %>" required>
    </div>
    <div class="form-group">
        <label for="descricao">descricao</label>
        <input type="descricao" class="form-control" id="descricao" name="descricao" value="<%= teste.descricao %>" required>
    </div>
    <div class="form-group">
        <label for="role">Role</label>
        <select class="form-control" id="role" name="role" required>
            <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
