<form action="/usuarios/<%= usuarios.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="usuariosname">Usuariosname</label>
        <input type="text" class="form-control" id="usuariosname" name="usuariosname" value="<%= usuarios.usuariosname %>" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" value="<%= usuarios.password %>" required>
    </div>
    <div class="form-group">
        <label for="role">Role</label>
        <select class="form-control" id="role" name="role" required>
            <option value="admin" <%= usuarios.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="usuarios" <%= usuarios.role === 'usuarios' ? 'selected' : '' %>>Usuarios</option>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
